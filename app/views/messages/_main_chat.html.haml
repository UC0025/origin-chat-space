-# <チャット画面>
.main-chat
  .main-chat__header
    .main-chat__header__data
      .main-chat__header__data__group
        グループ名
      .main-chat__header__data__name
        Member : ゆうし
    .main-chat__header__edit
      = link_to "#", class: "contents__btn" do
        Edit

  .main-chat__space
    .main-chat__space__messages
      .main-chat__space__messages__data
        .main-chat__space__messages__data__name
          ゆうし
          .main-chat__space__messages__data__name__time
            2020/02/26(wed)18:32:56
        .main-chat__space__messages__data__comment
          こんにちは!
      .main-chat__space__messages__data
        .main-chat__space__messages__data__name
          ゆうし
          .main-chat__space__messages__data__name__time
            2020/02/26(wed)18:32:56
        .main-chat__space__messages__data__comment
          ありがとう!
      .main-chat__space__messages__data
        .main-chat__space__messages__data__name
          ゆうし
          .main-chat__space__messages__data__name__time
            2020/02/26(wed)18:32:56
        .main-chat__space__messages__data__comment
          さよなら!

  .main-chat__footer
    .main-chat__footer__form
      .main-chat__footer__form__box
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'form__message', placeholder: 'type a message'
          .main-chat__footer__form__box__image
            = f.label :image, class: 'form__mask__image' do
              = icon('fas fa-L', 'image')
              = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'form__submit' 