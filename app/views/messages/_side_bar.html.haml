-# <サイドバー>
.side-bar
  .side-bar__header
    .side-bar__header__content
      .side-bar__header__content__name
        = current_user.name
      .side-bar__header__content__icons
        .side-bar__header__content__icons__pencil
          = link_to new_group_path do
            = icon('fas fa-L', 'edit', class: 'icon')
        .side-bar__header__content__icons__option
          = link_to edit_user_path(current_user) do
            = icon('fas fa-L', 'cog', class: 'icon')

  .side-bar__space
    - current_user.groups.each do |group|
      .side-bar__space__groups
        = link_to group_messages_path(group) do
          .side-bar__space__groups__name
            = group.name
          .side-bar__space__groups__message
            = group.show_last_message
